<div class="memo-1">
<div class="memo0">メモ帳</div>

 <div class="search-form">
  <%= form_with url: new_memo_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword,  size: 40  %>
    <%= f.submit "検索" %>
  <% end %>
</div>

 <div class="memo2">
<!--<span>現在ログイン中のユーザー：<%#= current_customer.nickname %></span>-->
　　<%= form_with model:[@memo], data: {remote: true} do |f| %>
       <div class="memo3">
        <%= f.label :タイトル  %><br>

       <%= f.text_field :title, :size=>"40x10", autofocus: true, id: "string" %>
       </div>


        <%= f.label :本文（自由欄） %><br>
        <%= f.text_area :body, :size=>"150x10" %><br>
        <%= f.submit "メモする", class: "button"  %>
　　　<% end %>
</div>


  <div class="memo4-1">
   <table>
    <thead>
        <tr>

            <th>タイトル</th>
            <th>本文</th>
            <th>メモ編集</th>
            <th>メモ削除</th>
            <th></th>
             </tr>
    </thead>


          <% @memos.each do |memo| %>
            <tr>
              <td><%= memo.title %></td>


                <td><%= memo.body %></td>


                <td><%= link_to "編集", edit_memo_path(memo) %></td>
                <td><%= link_to "削除", memo_path(memo), method: :delete %></td>

        <% end %>
     </tr>
    </tbody>
  </table>
  </div>



