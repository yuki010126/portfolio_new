<h2 class="title">管理者登録</h2>
  <div class= "new">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--<%#= render "admins/shared/error_messages", resource: resource %>-->
          <div class="field">
            <%= f.label :email, "メールアドレス" %>
              <p class="control has-icons-left">
                <i class="fas fa-envelope" style="color:black"></i>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "input" %>
              </p>
          </div>
          <div class="field">
            <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
                <% end %>
              <p class="control has-icons-left">
                <i class="fas fa-lock" style="color:black"></i>
                  <%= f.password_field :password, autocomplete: "new-password", :placeholder => "password confirmation", class: "input" %>
              </p>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, "パスワードの確認"  %>
              <p class="control has-icons-left">
                <i class="fas fa-lock" style="color:black"></i>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "password confirmation", class: "input" %>
              </p>
          </div>
          <div class="actions">
            <%= f.submit "登録する", class: "button" %>
          </div>
      <% end %>
      <%= render "admins/shared/links" %>
    </div>
