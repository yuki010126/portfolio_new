<h2 class="title">ログイン</h2>
  <div class= "new">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
          <p class="control has-icons-left">
            <i class="fas fa-envelope" style="color:black"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "input" %>
          </p>
       </div>
      <div class="field">
        <%= f.label :password, "パスワード" %>
          <p class="control has-icons-left">
            <i class="fas fa-lock" style="color:black"></i>
              <%= f.password_field :password, autocomplete: "current-password", :placeholder => "password", class: "input" %>
           </p>
       </div>
         <% if devise_mapping.rememberable? %>
           <div class="newfield">
             <%= f.check_box :remember_me %>
             <%= f.label :remember_me, "ログイン状態を保持" %>
           </div>
         <% end %>
      <div class="actions">
        <%= f.submit "ログイン", class: "button" %>
      </div>
    <% end %>
   <%= render "devise/shared/links" %>
  </div>
