<h1>Posts#edit</h1>
<span>現在ログイン中のユーザー：<%= current_customer.nickname %></span>
<%= form_for(@chat, url: chat_path(@chat)) do |f| %>
    <div>
        <%= f.label :タイトル %><br>
        <%= f.text_field :title, autofocus: true, :placeholder =>"#{@chat.title}" %>
    </div>
    <div>
        <%= f.label :中身 %><br>
        <%= f.text_area :introduction, :placeholder =>"#{@chat.introduction}" %>
    </div>
    <div><%= f.submit "更新する" %></div>
<% end %>