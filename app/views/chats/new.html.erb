<h1>chats#new</h1>
<span>現在ログイン中のユーザー：<%= current_customer.nickname %></span>
<%= form_with model:[@chat], data: {remote: true} do |f| %>

    <div>
        <%= f.label :タイトル %><br>
        <%= f.text_field :title, autofocus: true, id: "text" %>
    </div>
    <div>
        <%= f.label :中身 %><br>
        <%= f.text_area :introduction %>
    </div>
    <div><%= f.submit "投稿する" %></div>
<% end %>
<table>
    <thead>
        <tr>
            <th>投稿者名</th>
            <th>タイトル</th>
            <th>本文</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="chat">
      <%= render 'chats/new', chats: @chats %>
    </tbody>
</table>