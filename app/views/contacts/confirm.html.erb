<div class="form">

 <h5>※内容に間違いがなければ送信ボタンを押してください。</h5>


   <%= form_for(@contact, url: confirm_path) do |f| %>
    <div class="form-group">
     <%= f.label :nickname, 'ニックネーム*' %></br>
     <%= f.text_field :nickname, autofocus: true, value: @contact.nickname, readonly: true %>
    </div>

   <div class="form-group">
     <%= f.label :email, 'メールアドレス*' %></br>
     <%= f.text_field :email, autofocus: true, value: @contact.email, readonly: true %>
   </div>

   <div class="form-group">
     <%= f.label :subject, '用件*' %></br>
     <%= f.text_field :subject, autofocus: true, value: @contact.subject, readonly: true %>
   </div>

   <div class="form-group">
     <%= f.label :message, 'メッセージ*' %></br>
     <%= f.text_area :message, size: '70x10', value: @contact.message, readonly: true  %>
   </div>

    <% end %>


   <%= form_for(@contact) do |f| %>
     <%= f.hidden_field :nickname %>
     <%= f.hidden_field :email %>
     <%= f.hidden_field :phone_number %>
     <%= f.hidden_field :subject %>
     <%= f.hidden_field :message %>
     <div><%= f.submit '送信' %></div>
   <% end %>
   <%= form_for @contact, url: back_path do |f| %>
     <%= f.hidden_field :nickname %>
     <%= f.hidden_field :email %>
     <%= f.hidden_field :phone_number %>
     <%= f.hidden_field :subject %>
     <%= f.hidden_field :message %>
     <div><%= f.submit '入力画面に戻る' %></div>
   <% end %>
  </div>
</div>
